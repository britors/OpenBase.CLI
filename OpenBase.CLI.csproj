<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>Exe</OutputType>
    <TargetFramework>net10.0</TargetFramework>
    <AssemblyName>OpenBase.CLI</AssemblyName>
    <PackageId>w3ti.OpenBase.CLI</PackageId>
    <ToolCommandName>openbase</ToolCommandName> 
    <PackAsTool>true</PackAsTool>
    <Version>10.0.6</Version> 
   </PropertyGroup>

  <PropertyGroup>
    <Title>OpenBase CLI</Title>
    <PackageTags>dotnet;cli;clean-architecture</PackageTags>
    <PackageProjectUrl>https://github.com/britors/OpenBase.CLI</PackageProjectUrl>
    <RepositoryUrl>https://github.com/britors/OpenBase.CLI</RepositoryUrl>
    <PackageLicenseExpression>MIT</PackageLicenseExpression>
    <PackageIcon>icon.png</PackageIcon> 
    <PackageReadmeFile>README.md</PackageReadmeFile>
  </PropertyGroup>
  
  <ItemGroup>
    <PackageReference Include="Spectre.Console.Cli" Version="0.53.1" />
  </ItemGroup>

  <ItemGroup>
    <None Include="icon.png" Pack="true" PackagePath="\" />
    <None Include="README.md" Pack="true" PackagePath="\" />
    <None Include="LICENSE.txt" Pack="true" PackagePath="\" />
  </ItemGroup>
</Project>
